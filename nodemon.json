{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/",
        "dist/",
        "coverage/",
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ],
    "watch": ["./src", ".env", "src/**/*.pug", "src/**/*.css"],
    "execMap": {
        "ts": "node -r ts-node/register -r tsconfig-paths/register"
    },
    "ext": "js,json,ts"
}